<h1 class ="text-center mt-4" ><%= @user.username%>'s Profile</h1>
<h3 class ="text-center mt-4" >Articles by <%= @user.username%></h1>
<div class="text-center mt-4">
<% if logged_in? %>
    <% if @user ==current_user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
        <%= link_to "Delete profile", user_path(@user), class: "btn btn-danger" , method: :delete, data: { confirm: "Are you sure?"}%>
    <% elsif current_user.admin? %>
        <%= link_to "Delete profile", user_path(@user), class: "btn btn-danger" , method: :delete, data: { confirm: "Are you sure?"}%>
    <% end %>
<% end %>
</div>
<br>
<%= render 'articles/article' %>
<%= render 'layouts/footer'%>
