<h1 class ="text-center mt-4" >Log In</h1>
<div id="form" class="col-10">
<%= form_with(scope: :session,url: login_path, local:true)do |form| %>


<div class="form-group row">
    <%= form.label :email , class:"col-2 col-form-label"%>
    <div class="col-10">
    <%= form.email_field :email, class:"form-control" %>
    <br>
    </div>
    
    <%= form.label :password , class:"col-2 col-form-label" %>
    <div class="col-10">
    <%= form.password_field :password, class:"form-control" %>
    
    <br>
    <%= form.submit "Log In"  ,class:"btn btn-success"%>
    </div>
</div>


</div>
<% end %>
</div>
<%= render 'layouts/footer'%>