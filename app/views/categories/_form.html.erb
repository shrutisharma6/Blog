<div id="form" class="col-10">
<%= render 'shared/errors' ,obj:@category%>

  <%= form_with(model: @category, local:true)do |form| %>
    <div class="form-group row">
        <%= form.label :name,"Category  Name", class:"col-2 col-form-label" %>
        <div class="col-10">
          <%= form.text_field :name, class:"form-control shadow rounded"%><br>
          <%= form.submit class:"btn btn-success"%><br><br>
          <%= link_to "Show all Categories", categories_path, class: "btn btn-dark" %>
        </div>
    </div>
  <% end %>
</div>

