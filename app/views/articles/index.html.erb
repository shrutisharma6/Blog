<h1 class ="text-center mt-4">Read Articles</h1>

<div class="text-center m-4">
<%= link_to "Create New Article" ,new_article_path, class:"btn btn-dark btn-lg"%>
</div>

   
<table class="table table-striped">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |a| %>
    <tr>
        <td><%= a.title%></td>
        <td><%= a.description%></td>
        <td><%=button_to'Show',article_path(a), method: :get, class:"btn btn-success btn-sm"%></td>
        <td><%=link_to'Edit',edit_article_path(a) ,class:"btn btn-info btn-sm"%></td>
        <td><%= button_to 'Delete', article_path(a), method: :delete ,class:"btn btn-danger btn-sm"%></td>

        
    </tr>
<% end %>
  </tbody>
</table>
<div id="page-content">

    
</div>

    <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
    <div class="container text-center">
      <small>Copyright &copy; Your Website</small>
    </div>
  </footer>